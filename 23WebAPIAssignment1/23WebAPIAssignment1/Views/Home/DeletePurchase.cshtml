<script>


    $(document).ready(function () {
        $("body").on("click", "#Delete", function () {
            var supllier = {};
            supllier.PoNo = $("#PoNo").val();
            supllier.PoDate = $("#PoDate").val();
            supllier.SuplNo = $("#SuplNo").val();
            $.ajax({
                type: "DELETE",
                url: "/api/PoMasters/" + $("#PoNo").val(),
                data: JSON.stringify(supllier),
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            });
        });
    });
</script>
